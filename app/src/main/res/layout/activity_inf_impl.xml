<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <TextView
            android:id="@+id/tv_im_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="这是测试文本"
            android:maxLines="1"/>
    </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="20dp"
            />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:id="@+id/tv_im_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:text="作业标题"
        android:maxLines="2"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:cardCornerRadius="20dp"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simdra_im_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/tv_auter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笨笨的故事"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_im_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.27 19:25"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_im_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="大物练习册第一章第五节第三道大题，完全不会，求大神指导，包括电磁学，大神帮我解决问题，必有重谢"/>



</LinearLayout>
    </ScrollView>
    </FrameLayout>

</LinearLayout>
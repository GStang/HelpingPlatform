<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.swpuiot.helpingplatform.view.ToastActivity">
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <Button
            android:id="@+id/btn_image_show"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="查看大图"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c7c7"/>
        <Button
            android:id="@+id/btn_image_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="从相册选取图片"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c7c7"/>
        <Button
            android:id="@+id/btn_image_take"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="拍照"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#c9c7c7"/>
        <Button
            android:id="@+id/btn_image_cancel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>
